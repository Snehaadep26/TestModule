<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="358dp"
    android:layout_height="180dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="12dp"
    android:layout_margin="12dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/jeeMockTestAV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/roboto_bold"
            android:text="JEE Mock Test 2021"
            android:textColor="#191919"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:id="@+id/liveTextAV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="LIVE"
            android:textColor="#FF414D"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <ImageView
            android:id="@+id/imageLiveAV"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/roundbutton"
            app:layout_constraintEnd_toStartOf="@+id/liveTextAV"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <TextView
            android:id="@+id/mathsTextAV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Mathematics"
            android:textColor="#636363"
            android:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jeeMockTestAV">

        </TextView>

        <TextView
            android:id="@+id/dot1AV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="\u25CF"
            app:layout_constraintStart_toEndOf="@+id/mathsTextAV"
            app:layout_constraintTop_toBottomOf="@+id/jeeMockTestAV">

        </TextView>

        <TextView
            android:id="@+id/phyTextAV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto"
            android:text="Physics"
            android:textColor="#636363"
            app:layout_constraintStart_toEndOf="@+id/dot1AV"
            app:layout_constraintTop_toBottomOf="@+id/jeeMockTestAV">

        </TextView>

        <TextView
            android:id="@+id/dot2AV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="\u25CF"
            app:layout_constraintStart_toEndOf="@+id/phyTextAV"
            app:layout_constraintTop_toBottomOf="@+id/jeeMockTestAV">

        </TextView>

        <TextView
            android:id="@+id/chemTextAV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto"
            android:text="Chemistry"
            android:textColor="#636363"
            app:layout_constraintStart_toEndOf="@+id/dot2AV"
            app:layout_constraintTop_toBottomOf="@+id/jeeMockTestAV">

        </TextView>

        <TextView
            android:id="@+id/forfiveTextAV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="45Q"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mathsTextAV">

        </TextView>

        <TextView
            android:id="@+id/dot3AV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="\u25CF"
            app:layout_constraintStart_toEndOf="@+id/forfiveTextAV"
            app:layout_constraintTop_toBottomOf="@+id/mathsTextAV">

        </TextView>

        <TextView
            android:id="@+id/sevminTextAV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="60 mins"
            app:layout_constraintStart_toEndOf="@+id/dot3AV"
            app:layout_constraintTop_toBottomOf="@+id/mathsTextAV">

        </TextView>

        <TextView
            android:id="@+id/dot4AV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="\u25CF"
            app:layout_constraintStart_toEndOf="@+id/sevminTextAV"
            app:layout_constraintTop_toBottomOf="@+id/mathsTextAV">

        </TextView>

        <TextView
            android:id="@+id/marksTextAV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="75 marks"
            app:layout_constraintStart_toEndOf="@+id/dot4AV"
            app:layout_constraintTop_toBottomOf="@+id/mathsTextAV">

        </TextView>

        <Button
            android:id="@+id/backButtonAV"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"
            android:textAlignment="gravity"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sevminTextAV"
            app:layout_constraintVertical_bias="0.0">

        </Button>

        <Button
            android:id="@+id/startTextAV"
            android:layout_width="144dp"
            android:layout_height="29dp"
            android:background="#594099"
            android:text="START TEST"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/backButtonAV"
            app:layout_constraintStart_toStartOf="@+id/backButtonAV"
            app:layout_constraintTop_toTopOf="@+id/backButtonAV">

        </Button>

        <Button
            android:id="@+id/endTextAV"
            android:layout_width="191dp"
            android:layout_height="19dp"
            android:layout_marginTop="28dp"
            android:background="#594099"
            android:text="Ends in 1 hr 15 mins"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/backButtonAV"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@+id/backButtonAV"
            app:layout_constraintTop_toTopOf="@+id/backButtonAV">

        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>