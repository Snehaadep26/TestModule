<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayoutp28"
    android:background="#FFFFFF"
    tools:context=".MainActivityP31"
    android:orientation="horizontal">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="1900dp"
        >






        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2p31"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:background="#F6F4FE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarp31"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F6F4FE"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/backButtonp31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/backarrow" />

                    <TextView
                        android:id="@+id/toolbarTitlep31"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="left"
                        android:text="JEE Mock Test 2021"
                        android:textColor="#191919"
                        android:textSize="18sp" />
                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>



            <TextView
                android:id="@+id/button31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:background="#F6F4FE"
                android:text="SUBMIT"
                android:textAlignment="center"
                android:textColor="#1089FF"
                app:layout_constraintBottom_toBottomOf="@+id/toolbarp31"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

            </TextView>

            <ImageView
                android:id="@+id/textView16p31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/stopwatch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button31">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="00 : 44 : 34"
                android:textSize="18dp"
                android:textColor="#594099"
                android:fontFamily="@font/roboto_bold"
                app:layout_constraintStart_toEndOf="@+id/textView16p31"
                app:layout_constraintTop_toBottomOf="@+id/button31">

            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2p31"
            tools:ignore="MissingConstraints">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tablayoutP31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                app:tabGravity="fill"
                app:tabIndicator="@android:color/holo_orange_light"
                app:tabMode="fixed"
                app:tabSelectedTextColor="#191919"
                tools:ignore="SpeakableTextPresentCheck">

            </com.google.android.material.tabs.TabLayout>
        </HorizontalScrollView>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerP31"
            android:layout_width="match_parent"
            android:layout_height="1801dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="-10dp">


        </androidx.viewpager.widget.ViewPager>




    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>